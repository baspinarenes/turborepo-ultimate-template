{
  "name": "turborepo-empty-template",
  "private": true,
  "description": "An empty Turborepo template.",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"{apps,packages}/**/*.{js, jsx, ts, tsx, json, md, mdx}\"",
    "format:check": "prettier --check \"{apps,packages}/**/*.{js, jsx, ts, tsx, json, md, mdx}\""
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "lefthook": "^1.12.2",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "lefthook"
    ],
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}